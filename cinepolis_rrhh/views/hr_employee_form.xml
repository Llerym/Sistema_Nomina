<odoo>
<record id="view_employee_form_branch_cinepolis" model="ir.ui.view">
    <field name="name">hr.employee.form.branch.cinepolis</field>
    <field name="model">hr.employee</field>
    <field name="inherit_id" ref="hr.view_employee_form"/>
    <field name="arch" type="xml">


<xpath expr="//sheet/group[1]" position="replace">
  <!-- NUESTRA ESTRUCTURA REEMPLAZA el group[1] original -->
  <!-- FILA 1 -->
  <group colspan="4">
    <group col="2">
      <field name="work_email" widget="email" placeholder="e.g. johndoe@example.com"/>
    </group>
    <group col="2"
           style="background-color: #f0f0f0; border-radius: 4px;">
      <field name="department_id"/>
    </group>
  </group>
  <!-- FILA 2 -->
  <group colspan="4">
    <group col="2"
           style="background-color: #f0f0f0; border-radius: 4px;">
      <field name="work_phone" widget="phone"/>
    </group>
    <group col="2">
      <field name="job_id" context="{'default_no_of_recruitment': 0, 'default_is_favorite': False}" placeholder="e.g. Sales Manager"/>
    </group>
  </group>
  <!-- FILA 3 -->
  <group colspan="4">
    <group col="2">
      <field name="mobile_phone" widget="phone"/>
    </group>
    <group col="2"
           style="background-color: #f0f0f0; border-radius: 4px;">
      <field name="parent_id" widget="many2one_avatar_user"/>
    </group>
  </group>
  <!-- FILA 4 -->
  <group colspan="4">
    <group col="2"
           style="background-color: #f0f0f0; border-radius: 4px;">
      <field name="category_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" placeholder="Tags" groups="hr.group_hr_user"/>
    </group>
    <group col="2">
      <field name="coach_id" widget="many2one_avatar_user"/>
    </group>
  </group>
</xpath>


</field>
  </record>
</odoo>


