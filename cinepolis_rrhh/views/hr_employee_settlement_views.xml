<odoo>
  <!-- Vista formulario -->
  <record id="view_employee_settlement_form" model="ir.ui.view">
    <field name="name">hr.employee.settlement.form</field>
    <field name="model">hr.employee.settlement</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <form string="Liquidación Empleado">
        <sheet>
          <group>
            <group>
              <field name="employee_id"/>
              <field name="exit_date"/>
              <field name="reason"/>
              <field name="notes"/>
            </group>
            <group string="Liquidación">
              <field name="pending_vacation_days"/>
              <field name="severance_pay"/>
              <field name="unpaid_salary"/>
              <field name="bonuses"/>
              <field name="deductions"/>
              <field name="other_compensations"/>
              <field name="total_settlement" readonly="1"/>
              <field name="currency_id"/>
            </group>
          </group>

          <group string="Información Adicional">
            <field name="last_working_day"/>
            <field name="notice_given"/>
            <field name="notice_period_days"/>
            <field name="rehire_eligible"/>
            <field name="exit_interview_done"/>
            <field name="exit_document_signed"/>
            <field name="settlement_date"/>
          </group>

          <field name="state"/>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Vista lista -->
  <record id="view_employee_settlement_list" model="ir.ui.view">
    <field name="name">hr.employee.settlement.list</field>
    <field name="model">hr.employee.settlement</field>
    <field name="type">list</field>
    <field name="arch" type="xml">
      <list string="Liquidaciones Empleados">
        <field name="employee_id"/>
        <field name="exit_date"/>
        <field name="reason"/>
        <field name="total_settlement"/>
        <field name="state"/>
      </list>
    </field>
  </record>

  <!-- Acción -->
  <record id="action_hr_employee_settlement" model="ir.actions.act_window">
    <field name="name">Liquidaciones</field>
    <field name="res_model">hr.employee.settlement</field>
    <field name="view_mode">list,form</field>
  </record>

  <!-- Menú dentro de Nómina -->
  <menuitem id="menu_employee_settlement"
            name="Liquidaciones"
            parent="om_hr_payroll.menu_hr_payroll_root"
            action="action_hr_employee_settlement"
            sequence="15"/>
</odoo>
